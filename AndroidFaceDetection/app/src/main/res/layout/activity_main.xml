<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#4b9ec0">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Face Detect"
        android:textColor="#c8050505" />

    <Button
        android:id="@+id/btnCam"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:text="               Use Camera"
        android:drawableRight="@drawable/cameraicon"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:background="@drawable/curvedbutton"
        android:onClick="startcamera"
        android:textColor="#6f0772" />


    <Button
        android:id="@+id/btnLoad"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:background="@drawable/curvedbutton"
        android:text="Load Photo"
        android:textColor="#7e0c82" />

    <Button
        android:id="@+id/btnDetectFace"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:padding="8dp"
        android:layout_margin="2dp"
        android:background="@drawable/curvedbutton"
        android:text="Detect Emotion"
        android:textColor="#811090" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgview"/>

</LinearLayout>
